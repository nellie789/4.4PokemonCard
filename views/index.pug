extends layout

block content
  include mixins/cardCard
  div.container
    form(action='/' method='get')
      div.form-input
        label(for='category') Category
        select(id='category' name='category' autocomplete='off')
          each category in categories
            option(value=category selected = (category === searchCategory)) #{category}
        div.form-input
          label(for='random') Random
          input(type='checkbox' name='random' id='random' checked=searchRandom)
      button.button.save(type='submit') Filter
  div.container
    div.add-button-row
      a.button.save(href="/add") Add Card
  div.container
    each card in cards
      +cardCard(card)